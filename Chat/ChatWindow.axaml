<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="525" Height="400"
        x:Class="Chat.ChatWindow"
        Title="Chat"
		WindowStartupLocation="CenterScreen">
	<StackPanel Width="500" Height="400" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top">
		<TextBlock Height ="335" HorizontalAlignment="Center" VerticalAlignment="Top" Name="Chat" />
		<Grid ColumnDefinitions="400,100" RowDefinitions="auto"  Margin="4" >
			<TextBox Name="Message" Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center" Width ="400" Watermark="Enter a message"/>
			<Button Name ="Send" Click="SendButtonOnClick" Grid.Row="0" HorizontalAlignment="Stretch" Background="#ffc9f5" BorderBrush="Black" Grid.Column="1" Width ="99">Send</Button>
		</Grid>
	</StackPanel>
</Window>

